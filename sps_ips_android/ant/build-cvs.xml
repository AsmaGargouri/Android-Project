<project name="cvs-${ant.project.name}" basedir="../">

  <import file="${basedir}/ant/build-pts.xml" />
  <!--frequently used CVS commands-->
  <property name="cvs.update.qn" value="-qn update -dP" />
  <property name="cvs.update.q" value="-q update -dP" />
  <property name="cvs.commit.q"  value="-q commit -m 'ANT auto commit'" />

  <!--
    ===================================================================
    Properties CVS
    ===================================================================
  -->
  <property name="subproject.cvs"
    value="
                ant
                runant.bat
                tasks
                changes.txt
                .cvsignore
   				libs
  				src
  				res
  				AndroidManifest.xml
  				ic_launcher-web.png
  				lint.xml
  				proguard-project.txt
  				project.properties
  				keystore
          " />

  <!--  ========================== C V S  TARGETS =========================  -->

  <!-- =================================
    target: _cvs.exec
    perform the cvs command given in param.
    ================================= -->
  <target name="_cvs.exec">
    <echo message="Performing cvs ${cvs.command}" />

    <cvs dest="${basedir}" command="${cvs.command} ${subproject.cvs}" />
  </target>

  <!-- =================================
    target: u-q
    ================================= -->
  <target name="u-q" depends="init">
    <echo message="--------------------------------------------------------------------------------"/>
    <echo message="Exec ##### u-q ##### "/>
    <echo message="--------------------------------------------------------------------------------"/>
    <antcall target="_cvs.exec">
      <param name="cvs.command" value="${cvs.update.q}" />
    </antcall>
    <antcall target="acceptNewTodos"/>
  </target>

  <!-- =================================
    target: u-qn
    ================================= -->
  <target name="u-qn" >
    <echo message="--------------------------------------------------------------------------------"/>
    <echo message="Exec ##### u-qn ##### "/>
    <echo message="--------------------------------------------------------------------------------"/>
    <antcall target="_cvs.exec">
      <param name="cvs.command" value="${cvs.update.qn}" />
    </antcall>
  </target>




  <!-- =================================
    target: commit
    perform a cvs commit using changes editor
    ================================= -->
  <target name="commit" depends="init" >
    <echo message="--------------------------------------------------------------------------------"/>
    <echo message="Exec ##### commit ##### "/>
    <echo message="--------------------------------------------------------------------------------"/>
    <antcall target="changes_show"/>
    
  </target>

</project>
